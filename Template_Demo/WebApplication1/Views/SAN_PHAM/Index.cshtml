@model IEnumerable<WebApplication1.Models.SAN_PHAM>

@{
    ViewBag.Title = "Index";
}
<style>
    ul.cat_menu {
        display: none !important;
    }

    .cat_menu_container:hover ul.cat_menu {
        display: block !important;
    }
</style>

<h2>Products List</h2>

<p>
   <a href="@Url.Action("Create")">Create New</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenSP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MoTa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IMAGE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LOAI_SAN_PHAM.TenLoaiSP)
        </th>
