            @Html.DisplayNameFor(model => model.NHA_CUNG_CAP.TenNhaCC)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoTa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IMAGE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LOAI_SAN_PHAM.TenLoaiSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NHA_CUNG_CAP.TenNhaCC)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID_SP }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID_SP }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID_SP })
            </td>
        </tr>
    }

</table>
